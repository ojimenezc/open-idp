<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="oscar jimenez carmona" id="9156156">
        <preConditions onFail="CONTINUE" onError="CONTINUE">
            <not>
                <tableExists tableName="applications"/>
            </not>
        </preConditions>
        <createTable tableName="applications"
                     remarks="A table to contain all applications information">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="clientId" type="varchar(200)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="clientSecret" type="varchar(2000)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="accountNonExpired" value="1" type="BIT(1)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="accountNonLocked" value="1" type="BIT(1)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="credentialsNonExpired" value="1" type="BIT(1)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="enabled" value="1" type="BIT(1)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="creation_date" type="DATETIME()">
                <constraints nullable="false"></constraints>
            </column>

        </createTable>
        <addAutoIncrement
                columnDataType="BIGINT"
                columnName="id"
                incrementBy="1"
                startWith="1"
                tableName="applications"/>
    </changeSet>
</databaseChangeLog>
